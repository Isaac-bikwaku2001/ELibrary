@model ELibrary.Models.Livre

@{
    ViewData["Title"] = "Details";
}

<div>
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="col-md-6">
                    <img class="card-img-top mb-5 mb-md-0" src="~/images/@Model.Image" alt="@Model.Titre" />
                </div>
                <div class="col-md-6">
                    <div class="small mb-1">@Model.ISBN</div>
                    <h1 class="display-5 fw-bolder">@Model.Titre</h1>
                    <div class="fs-5 mb-5">
                        <span>Langue: @Model.Langue</span>
                        <span style="display: block;">Genre: @Model.Genre.Libelle</span>
                        <span style="display: block;">Date d'édition: @Model.DateEdition</span>
                    </div>
                    <p class="lead">Auteur: @Model.Auteur.Nom @Model.Auteur.Prenom</p>
                    <div class="d-flex">
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Index">
                            Home
                        </a>
                        <a class="btn btn-success m-2" asp-controller="Cart" asp-action="Emprunter" asp-route-id="@Model.LivreID">
                            <i class="bi bi-cart-plus"></i> Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

