@model IEnumerable<ELibrary.Models.Livre>

@{
    ViewData["Title"] = "Livres";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title text-center">
                                    <b>ISBN: </b>@item.ISBN
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="~/images/@item.Image" width="100%" alt="@item.Titre">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Titre: </b>@item.Titre</p>
                            <p class="card-text"><b>Langue: </b>@item.Langue</p>
                            <p class="card-text"><b>Date d'édition: </b>@item.DateEdition</p>
                            <p class="card-text"><b>Auteur: </b>@item.Auteur.Nom @item.Auteur.Prenom</p>
                            <p class="card-text"><b>Genre: </b>@item.Genre.Libelle</p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-controller="Home" asp-action="Details" asp-route-id="@item.LivreID">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white" asp-controller="Cart" asp-action="Emprunter" asp-route-id="@item.LivreID">
                                    <i class="bi bi-cart-plus"></i> Cart
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
